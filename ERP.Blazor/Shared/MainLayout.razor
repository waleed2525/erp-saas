@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />

<MudLayout RightToLeft="true">
    <MudDrawer Variant="DrawerVariant.Persistent"
               ClipMode="DrawerClipMode.Always"
               @bind-Open="_drawerOpen"
               Elevation="1">


        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">لوحة التحكم</MudNavLink>
            <MudNavLink Href="/accounts" Icon="@Icons.Material.Filled.AccountTree">شجرة الحسابات</MudNavLink>
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.Security">الصلاحيات</MudNavLink>
            <MudNavLink Href="/subscriptions" Icon="@Icons.Material.Filled.CreditCard">الاشتراكات</MudNavLink>
        </MudNavMenu>

    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6">ERP SaaS</MudText>
    </MudAppBar>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}
